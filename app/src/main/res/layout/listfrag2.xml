<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        android:tag="cards main container">

        <android.support.v7.widget.CardView
            android:id="@+id/card_view"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:clickable="true"
            card_view:cardElevation="1dp"
            card_view:cardUseCompatPadding="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="480dp"
                android:background="@drawable/card"
                android:padding="20dp"
                android:orientation="horizontal">
                <EditText
                    android:id="@+id/title_meeting"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@android:color/transparent"
                    android:layout_alignParentTop="true"
                    android:gravity="center_vertical"
                    android:hint="Title"
                    android:inputType="textCapWords"
                    android:padding="10dp"
                    android:singleLine="true"
                    android:drawableLeft="@drawable/formattitle"
                    android:drawablePadding="5dp"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white_54"
                    android:textSize="@dimen/text_user_entry" />

                <View
                    android:id="@+id/line1"
                    android:layout_width="fill_parent"
                    android:layout_height="1px"
                    android:layout_below="@id/title_meeting"
                    android:background="@color/white_greyish" />

                <!--<EditText
                    android:id="@+id/duration_meeting"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@android:color/transparent"
                    android:gravity="center_vertical"
                    android:hint="Duration"
                    android:inputType="number"
                    android:layout_below="@+id/line1"
                    android:padding="10dp"
                    android:singleLine="true"
                    android:textColor="@color/white"
                    android:drawableLeft="@drawable/timer"
                    android:drawablePadding="5dp"
                    android:textColorHint="@color/white_54"
                    android:textSize="@dimen/text_user_entry" />-->
                <Spinner
                    android:id="@+id/duration_meeting"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@android:color/transparent"
                    android:gravity="center_vertical"
                    android:layout_below="@+id/line1"
                    android:padding="10dp"
                    android:textColor="@color/white_greyish"
                    android:textSize="@dimen/text_small"
                    android:prompt="@string/spinner_title"/>



                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1px"
                    android:layout_below="@+id/duration_meeting"
                    android:id="@+id/line2"
                    android:background="@color/white_greyish" />

                <EditText
                    android:id="@+id/desc_meeting"
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:background="@android:color/transparent"
                    android:gravity="bottom"
                    android:layout_below="@+id/line2"
                    android:hint="Description"
                    android:padding="10dp"
                    android:drawableLeft="@drawable/contentpaste"
                    android:drawablePadding="5dp"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white_54"
                    android:maxLines="2"
                    android:imeOptions="actionDone"
                    android:textSize="@dimen/text_small" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1px"
                    android:layout_below="@id/desc_meeting"
                    android:id="@+id/line3"
                    android:background="@color/white_greyish" />
                <EditText
                    android:id="@+id/dt_meeting"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@android:color/transparent"
                    android:gravity="center_vertical"
                    android:layout_below="@+id/line3"
                    android:hint="Date"
                    android:padding="10dp"
                    android:drawableLeft="@drawable/calendartext"
                    android:drawablePadding="5dp"
                    android:singleLine="true"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white_54"
                    android:textSize="@dimen/text_user_entry" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1px"
                    android:layout_marginTop="5dp"
                    android:layout_below="@+id/dt_meeting"
                    android:id="@+id/line4"
                    android:background="@color/white_greyish" />
                <EditText
                    android:id="@+id/time_meeting"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@android:color/transparent"
                    android:gravity="center_vertical"
                    android:layout_below="@+id/line4"
                    android:hint="Time"
                    android:drawableLeft="@drawable/clock"
                    android:drawablePadding="5dp"
                    android:padding="10dp"
                    android:singleLine="true"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white_54"
                    android:textSize="@dimen/text_user_entry" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1px"
                    android:layout_marginTop="5dp"
                    android:layout_below="@+id/time_meeting"
                    android:background="@color/white_greyish" />
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.1px"
                    android:layout_above="@+id/sb"
                    android:layout_marginBottom="20dp"
                    android:id="@+id/line5"
                    android:background="@color/white_54" />


                <TextView
                    android:id="@+id/submit_meeting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/time_meeting"
                    android:layout_alignParentRight="true"
                    android:fontFamily="san-serif"
                    android:textColor="#ffffff"
                    android:layout_marginTop="@dimen/vertical_margin"
                    android:text="@string/submit"
                    android:textAllCaps="true"
                    android:textSize="@dimen/text_small"
                    android:gravity="center"
                    />


            </RelativeLayout>
        </android.support.v7.widget.CardView>



    </RelativeLayout>


