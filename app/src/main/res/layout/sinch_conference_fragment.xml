<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/signup"
    xmlns:android="http://schemas.android.com/apk/res/android">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="50dp"
    android:layout_above="@+id/button3"
    android:background="#626562">
    <TextView
        android:id="@+id/conferencename"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Vijay"
        android:textSize="30sp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textColor="#fff"
        android:padding="30dp"
        />

    <TextView
        android:id="@+id/conferenceduration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:textSize="20sp"
        android:gravity="center"
        android:textColor="@color/white"
        android:layout_below="@+id/conferencename"
        android:text="00:15 "/>
    <TextView
        android:id="@+id/conferenceparticipation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textSize="20sp"
        android:gravity="center"
        android:textColor="@color/white"
        android:layout_below="@+id/conferenceduration"
        android:text="Participants : "/>

</RelativeLayout>
