<Button
    android:id="@+id/rejectconferencebutton"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="50dp"
    android:text="End"
    android:fontFamily="sans-serif-smallcaps"
    android:textColor="#fff"
    android:background="#d57177"
    android:layout_alignParentBottom="true"
    android:layout_centerHorizontal="true" />

<ImageView
    android:id="@+id/ButtonSeperator"
    android:layout_width="1pt"
    android:layout_height="1pt"
    android:layout_centerHorizontal="true"/>

<ImageButton
    android:id="@+id/button4"
    android:layout_width="130dp"
    android:layout_height="100dp"
    android:layout_toRightOf="@+id/ButtonSeperator"
    android:background="#626562"
    android:src="@drawable/loud"
    android:tint="#fff"
    android:layout_above="@+id/rejectconferencebutton"
    android:layout_centerHorizontal="true"
    />

<ImageButton
    android:id="@+id/button3"
    android:layout_width="130dp"
    android:layout_height="100dp"
    android:background="#626562"
    android:layout_toLeftOf="@+id/ButtonSeperator"
    android:src="@drawable/mic"
    android:tint="#fff"
    android:layout_above="@+id/rejectconferencebutton"
    android:layout_centerHorizontal="true"
    />
</RelativeLayout>

