<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/btnbord"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/conferencename"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:layout_marginTop="43dp"
        android:text="Vijay" />

    <TextView
        android:id="@+id/conferenceduration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/conferencename"
        android:layout_alignStart="@+id/conferencename"
        android:textColor="@color/white"
        android:layout_below="@+id/conferencename"
        android:layout_marginTop="26dp"
        android:text="00:15 "/>
    <TextView
        android:id="@+id/conferenceparticipation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textColor="@color/white"
        android:layout_below="@+id/conferenceduration"
        android:layout_marginTop="15dp"
        android:text="Participants : "/>


